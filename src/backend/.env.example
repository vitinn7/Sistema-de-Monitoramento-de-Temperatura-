# Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security Settings
JWT_SECRET=dev_jwt_secret_change_in_production_2025
JWT_EXPIRES_IN=24h
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:3001

# Cache Settings
CACHE_TTL=300  # 5 minutes
CACHE_API_RESPONSES=true

