# ============================================================================
# Exemplo de arquivo .env para Frontend (React/Vite)
# Copie este arquivo para .env e ajuste os valores conforme necessário
# ============================================================================

# ============================================================================
# API BACKEND
# ============================================================================
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# ============================================================================
# AMBIENTE
# ============================================================================
VITE_APP_NAME=Sistema de Monitoramento de Temperatura
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ============================================================================
# CONFIGURAÇÕES DO DASHBOARD
# ============================================================================
VITE_REFRESH_INTERVAL=30000
VITE_CHART_ANIMATION=true
VITE_DEFAULT_CITY=São Paulo
VITE_MAX_HISTORY_DAYS=7

# ============================================================================
# ALERTAS E NOTIFICAÇÕES
# ============================================================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ALERT_SOUND=true
VITE_TEMPERATURE_ALERT_HIGH=35
VITE_TEMPERATURE_ALERT_LOW=5

# ============================================================================
# MAPAS (OPCIONAL)
# ============================================================================
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_here
# VITE_MAPBOX_TOKEN=your_mapbox_token_here

# ============================================================================
# FEATURES TOGGLES
# ============================================================================
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_CHARTS=true
VITE_ENABLE_HISTORICAL=true

# ============================================================================
# DESENVOLVIMENTO
# ============================================================================
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false
